<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ari.mapper.ReviewMapper">
	<insert id="reviewContent" parameterType="com.ari.review.model.ReviewDTO">
		insert into review
			values(review_reviewidx.nextval,
				#{userId},
				#{berthIdx},
				#{reviewContent},
				sysdate,
				#{reviewScore},
				#{reviewImg})
	</insert>
	<select id="getBerthidx" parameterType="int" resultType="int">
		select berthidx
		from reser
		where reseridx=#{idx}
	</select>
	<delete id="reviewDel">
		delete from review
		where reviewIdx=#{reviewIdx}
	</delete>
</mapper>